<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Selecione datas da reserva"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


    <TextView
        android:id="@+id/checkintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Check in"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintStart_toStartOf="parent"

        />

    <DatePicker android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/checkintext"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:datePickerMode="calendar"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/getcheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="select checkin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkintext"

        app:layout_constraintTop_toBottomOf="@id/title2" />

    <TextView
        android:id="@+id/checkouttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Check out"
        app:layout_constraintTop_toBottomOf="@+id/checkin"
        app:layout_constraintStart_toStartOf="parent"

        />

    <DatePicker android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/checkouttext"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:datePickerMode="calendar"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/getcheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="select checkout"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkouttext"
        app:layout_constraintTop_toBottomOf="@id/checkin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tomain"
        android:text="tela principal"
        app:layout_constraintTop_toTopOf="@id/checkout"
        android:layout_margin="50dp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tohotelist"
        android:text="ESCOLHA O HOTEL!"
        app:layout_constraintTop_toTopOf="@id/tomain"
        app:layout_constraintStart_toEndOf="@id/tomain"
        android:layout_margin="50dp"
        android:padding="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>